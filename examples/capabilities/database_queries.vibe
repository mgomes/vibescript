def load_player(id)
  db.find("Player", id)
end

def top_players(limit)
  db.query("Player", order: { raised: :desc }, limit: limit)
end

def increment_total(id, amount)
  player = db.find("Player", id)
  updated = player[:raised] + amount
  db.update("Player", id, { raised: updated })
end
