def fundraising_badge(amount)
  if amount >= 100000
    "legend"
  elsif amount >= 10000
    "elite"
  elsif amount >= 1000
    "gold"
  elsif amount >= 500
    "silver"
  else
    "bronze"
  end
end

def choose_label(status)
  if status == "active"
    "needs attention"
  elsif status == "complete"
    "done"
  else
    "unknown"
  end
end
